{
  "name": "streamchik",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win",
    "server": "node server.js"
  },
  "build": {
    "appId": "com.streamchik.app",
    "productName": "Streamchik",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Cresscendoll",
        "repo": "Streamchik",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "Streamchik"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}
